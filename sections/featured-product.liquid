<section style="padding: 60px 20px; text-align: center;">
  <h2>{{ section.settings.heading }}</h2>
  <div style="display: flex; flex-wrap: wrap; gap: 20px; justify-content: center;">
    {% for product in collections[section.settings.collection].products limit: 4 %}
      <div style="width: 200px; border: 1px solid #eee; padding: 10px; border-radius: 5px;">
        <a href="{{ product.url }}">
          <img src="{{ product.featured_image | img_url: '300x300' }}" alt="{{ product.title }}" style="width: 100%; height: auto;">
          <p style="margin-top: 10px;">{{ product.title }}</p>
          <strong>{{ product.price | money }}</strong>
        </a>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Produtos em Destaque",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Coleção"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Nossos Produtos"
    }
  ],
  "presets": [
    {
      "name": "Produtos em Destaque"
    }
  ]
}
{% endschema %}
